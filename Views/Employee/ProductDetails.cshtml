@model PROG7311_POE.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Products">Products</a></li>
            <li class="breadcrumb-item active">Product Details</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Product Information</h5>
                        <span class="badge @(Model.IsOrganic ? "bg-success" : "bg-secondary")">
                            @(Model.IsOrganic ? "Organic" : "Conventional")
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.ProductName</h2>
                    <p class="text-muted">
                        <i class="bi bi-tag"></i> @Model.Category.CategoryName
                    </p>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5>Basic Information</h5>
                            <ul class="list-group list-group-flush">
                               
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Harvest Date</span>
                                    <span class="text-muted">@Model.ProductionDate.ToString("MMMM dd, yyyy")</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h5>Production Details</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Quantity Available</span>
                                    <span class="text-muted">@Model.QuantityAvailable @Model.UnitOfMeasure</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>Price</span>
                                    <span class="text-muted">@Model.Price</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5>Product Description</h5>
                        <p>@Model.Description</p>
                    </div>

                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Products" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Products
                        </a>
                        <a href="#" class="btn btn-success">
                            <i class="bi bi-download"></i> Export Data
                        </a>
                    </div>
                </div>
            </div>

            <!-- Similar products -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Similar Products</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @* This would be populated with actual similar products in a real app *@
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Wheat Straw</h6>
                                <small class="text-muted">Organic</small>
                            </div>
                            <p class="mb-1">Green Valley Farm</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Rice Husks</h6>
                                <small class="text-muted">Conventional</small>
                            </div>
                            <p class="mb-1">Riverside Farms</p>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Corn Stalks</h6>
                                <small class="text-muted">Organic</small>
                            </div>
                            <p class="mb-1">Heartland Organics</p>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Energy conversion chart -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Energy Efficiency Rating</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="display-4 text-success">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-half"></i>
                        </div>
                        <h5 class="mt-2">4.5/5.0</h5>
                        <p class="text-muted">Excellent Energy Efficiency</p>
                    </div>
                    
                    <div class="progress mb-3" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 90%;" 
                             aria-valuenow="90" aria-valuemin="0" aria-valuemax="100">
                            Energy Efficiency: 90%
                        </div>
                    </div>
                    
                    <div class="progress mb-3" style="height: 25px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 85%;" 
                             aria-valuenow="85" aria-valuemin="0" aria-valuemax="100">
                            Carbon Reduction: 85%
                        </div>
                    </div>
                    
                    <div class="progress mb-3" style="height: 25px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 75%;" 
                             aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                            Cost Efficiency: 75%
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Any product-specific JavaScript can go here
        });
    </script>
        }
