@model PROG7311_POE.Models.Farmer
@{
    ViewData["Title"] = "Farmer Profile";
}

@* <div class="container"> *@
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold">Farmer Profile</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
            <div class="card-header  farmer-theme">
                    <h5 class="card-title mb-0">Farm Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Farm Name:</div>
                        <div class="col-md-8">@Model.FarmName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Location:</div>
                        <div class="col-md-8">@Model.Address</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Member Since:</div>
                        <div class="col-md-8">@Model.JoinedDate.ToShortDateString()</div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
            <div class="card-header  farmer-theme">
                    <h5 class="card-title mb-0">Contact Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Contact Person:</div>
                        <div class="col-md-8">@Model.OwnerName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Phone Number:</div>
                        <div class="col-md-8">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>
                   
                </div>
            </div>

            <div class="card">
            <div class="card-header farmer-theme">
                    <h5 class="card-title mb-0">Account Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Dashboard" class="btn btn-outline-primary">Go to Dashboard</a>
                        <a asp-action="AddProduct" class="btn btn-outline-success">Add New Product</a>
                        
                    </div>
                </div>
            </div>
        </div>




    </div>
    
@* </div> *@
